.timeline
  width 100%
  height 300px
  border: 1px solid #333334
  display: flex
  flex-direction: row
  margin: 2rem 0
  &__day
    flex-basis: 100%
    border-right 1px solid #ececec
    display flex
    flex-direction: column
    &_friday
      border-right: 0
  &__part
    padding: 1em
    flex-grow: 1
    display: flex
    justify-content: center
    img
      max-width: 100%
      max-height: 100%
      align-self: center
  &__weekend
    width: 2rem